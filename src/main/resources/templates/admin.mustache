<html>
    <head>
            <title>Job Postings</title>
            <meta charset="utf-8" />
            <meta
                name="viewport"
                content="width=device-width, initial-scale=1, user-scalable=no"
            />
            <link rel="stylesheet" href="css/main.css" />
            <link
                rel="stylesheet"
                href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
                integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
                crossorigin="anonymous"
            />
    </head>
    <nav class="navbar navbar-expand-lg nav">
                <div class="d-flex nav">
                 <a class="nav-link" href="/home" style="color: #6f788a!important;" > Home </a>

                 <a class="nav-link" href="/admin" style="color: #6f788a!important;"> Administration </a>
                </div>
            </nav>

        <header id="myCarousel" class="carousel slide">
                <!-- Wrapper for Slides -->
                <div class="carousel-inner">
                    <div class="item active">
                        <!-- Set the first background image using inline CSS below. -->
                        <div
                                class="fill"
                                style="background-image:url('../images/nav-bg.png');"
                        >
                            <span class="center-spacer"></span>
                            <img
                                    src="../images/basecamp-logo.png"
                                    style="vertical-align:middle;"
                                    alt="Base Camp Coding Academy"
                            />
                        </div>
                    </div>
                </div>
        </header>
         <body>

             {{#employers}}
                    <div class="list-components mx-auto">
                        <img src="{{ logo_url }}" class="img-wrap">
                       <a href="home/{{id}}" class="text-wrap"> <h4>{{ name }} </h4></a>
                        <h4>{{ address }} </h4>
                        <h4>{{ position }} </h4>
                        <h4>{{ description }} </h4>
                        <h4>{{ benefits }} </h4>
                        <h4>{{ email }} </h4>

                        <form action="/admin/{{id}}/comments" method="POST">
                            <h4>Leave Comment: </h4>
                            <input type="text" name="comment_body" style="margin-left: 14.8rem;">

                            <button type="submit" class="btn btn-info"> Comment </button>
                        </form>

                         <div class="d-flex">
                             <h4>Comments:<h4>
                              {{ #comments }}
                                  <p> {{ comment_body }} </p>
                              {{ /comments }}
                         </div>

                         <form action="/admin/{{id}}/delete" method="POST">
                             <button type="submit" class="btn btn-danger" style="margin-left: 54rem;"> Delete Post</button>
                         </form>
                    </div>
              {{/employers}}



         </body>
</html>